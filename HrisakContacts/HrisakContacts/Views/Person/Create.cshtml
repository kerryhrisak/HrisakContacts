
@{
    ViewBag.Title = "Create";
}

<h2>Add Person</h2>

<div ng-app="appHrisak" ng-controller="personController as vm">
    <form name="personAddForm" novalidate>

        <div class="panel panel-primary">
            <div class="panel-heading">Add Person</div>
            <hr />
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            <input type="text" class="form-control" ng-model="vm.addPerson.lastName" />

                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            <input type="text" class="form-control" ng-model="vm.addPerson.firstName" />

                        </div>
                       </div>
                    </div>
                <div class="form-group">
                    <label for="birthDate">Birth Date</label>
                    <input type="date" id="birthDate" class="form-control" ng-model="vm.addPerson.birthDate"
                           placeholder="dd-MM-yyyy" min="01-01-1920" max="09-30-2016" required />
                    <div role="alert">
                        <span class="error" ng-show="scheduleForm.input.$error.required">Required!</span>
                        <span class="error" ng-show="scheduleForm.input.$error.date">Not a valid date!</span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="cellPhone">Cell Phone</label>
                    <input type="text" class="form-control" ng-model="vm.addPerson.cellPhone" />

                </div>

                <div class="form-group">
                    <label for="emailAddress">Email</label>
                    <input type="text" class="form-control" ng-model="vm.addPerson.emailAddress" />
                </div>

                <div class="form-group">
                    <label for="Street">Street</label>
                    <input type="text" class="form-control" ng-model="vm.addPerson.street" />
                </div>
                <div class="row">
                    
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="City">City</label>
                            <input type="text" class="form-control" ng-model="vm.addPerson.city" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="State">State</label>
                            <input type="text" class="form-control" maxlength="3" ng-model="vm.addPerson.state" size="2" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="ZipCode">Zip</label>
                            <input type="text" class="form-control" ng-model="vm.addPerson.zipCode" />
                        </div>
                    </div>
               </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-12">
                        <button class="btn btn-sm btn-primary"
                                ng-click="vm.saveNewPerson(vm.addPerson)" type="button">
                           
                            &nbsp;Save</button>
                            
</div>
                </div>
            </div>
        </div>
    </form>


</div>

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/app/Person/service/personService.js"></script>
    <script src="~/app/Person/controller/personController.js"></script>


